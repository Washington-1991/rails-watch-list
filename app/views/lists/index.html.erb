
<div class="header-container">
  <div class="title">
    <h1 class="Movie-Center"><i class="fa-solid fa-film"></i> Movie Center</h1>
  </div>
  <div class="search-bar">
      <form class="d-flex" role="search">
        <input class="form-control me-2" type="search" placeholder="What are you lookin' for?" aria-label="Search">
        <button class="btn btn-info" type="submit">Search</button>
     </form>
  </div>
</div>
<%# here is where the headers are closed %>
<div class="buttons-containers">
  <div class="button">
   <a class="btn btn-primary" href="/home">home</a>
      <a href="lists" class ="btn btn-dark">See all lists</a>
  </div>
</div>
<%# here is where the buttons are closed %>

<div class="container">
  <h1>All my lists</h1>
  <ul>
    <% @lists.each do |list| %>
    <li><%= link_to list.name, list_path(list) %></li>
    <% end %>
  </ul>

  <%= link_to "add a list",  new_list_path, class:"btn btn-success"%>

</div>
